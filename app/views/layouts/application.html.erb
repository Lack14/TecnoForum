<!DOCTYPE html>
<html>
<head>
  <title>TecnoForum</title>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<div class="wrapper">
			  <div class="logo">TecnoForum</div>
			<nav>
				<% if user_signed_in? %>
			    	<%= link_to "Inicio",root_path%>
			    	<%= link_to " Nueva pregunta",new_post_path%>
			    	
			    		<%= link_to edit_user_registration_path(current_user) do%>
			    		<% if current_user.avatar.url.present? %>
			    	<%= image_tag current_user.avatar_url() if current_user.avatar%>
			    	<%else%>
			    	<%= image_tag ("default.jpg")%>
			    	<%end%>

			    	<%end%>
			    	<%= link_to "Cerrar sesion",destroy_user_session_path, method: :delete%>
			    	<%else%>
			    	<%= link_to "Ingresar",new_user_session_path%>
			    	<%= link_to "Crear cuenta",new_user_registration_path%>
			    	<%end%>
			</nav>
		</div>
	</header>
	<div id="notice_wrapper">
		<%if notice%>
		 <p class="notice"><%= notice %></p>
		 <%elsif alert%>
		 <p class="alert"><%= alert %></p>
		 <%end%>
		</div>
<%= yield %>

</body>
</html>
