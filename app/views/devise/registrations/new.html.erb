<div class="container">
  <h2 class="text-align-center">Sign up</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="field">

      <%= f.email_field :email,class:"form-group", placeholder:"Email", autofocus: true %>
    </div>
  
    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password,class:"form-group", placeholder:"Password", autocomplete: "off" %>
    </div>
  
    <div class="field">
      <%= f.password_field :password_confirmation,class:"form-group",placeholder:"Password confirnmation" ,autocomplete: "off" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Sign up",class:"btn" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>